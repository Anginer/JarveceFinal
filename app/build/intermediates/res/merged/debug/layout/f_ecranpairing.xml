<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:id="@+id/ligne_horizontal1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:orientation="horizontal" >
    </LinearLayout>

    <TextView
        android:id="@+id/textViewPairing"
        style="@style/TextViewTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ligne_horizontal1"
        android:gravity="center"
        android:text="@string/pairing" />

    <LinearLayout
        android:id="@+id/ligne_horizontal2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/textViewPairing"
        android:background="@color/black"
        android:orientation="horizontal"
       >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearInside"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/ligne_horizontal2"
        android:layout_above="@+id/buttonAjout"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearInsideInside"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/buttonSearch"
                style="@style/Button"
                android:scaleType="fitCenter"
                android:src="@drawable/search" >
            </ImageButton>

            <ImageButton
                android:id="@+id/buttonConversation"
                style="@style/Button"
                android:scaleType="fitCenter"
                android:src="@drawable/bulle"
                android:visibility="gone">
            </ImageButton>
        </LinearLayout>

        <TextView
        android:id="@+id/textViewInfoCo"
        style="@style/TextViewSubTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity=""
        android:text="@string/coToDe"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"/>

        <ListView
            android:id="@+id/listViewBluetooth"
            android:layout_width="fill_parent"
            android:layout_height="350dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:clickable="true"
            android:choiceMode="singleChoice" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/buttonBack"
        style="@style/Button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter"
        android:src="@drawable/back" >
    </ImageButton>

    <ImageButton
        android:id="@+id/buttonParametre"
        style="@style/Button"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonBack"
        android:scaleType="fitCenter"
        android:src="@drawable/parametre" >
    </ImageButton>


</RelativeLayout><!-- From: file:/D:/Users/Clement/StudioProjects/Jarvece/app/src/main/res/layout/f_ecranpairing.xml -->